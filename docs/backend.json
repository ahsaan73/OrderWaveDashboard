{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "URL for the user's profile photo."
        },
        "role": {
          "type": "string",
          "description": "The user's role, which determines their permissions."
        }
      },
      "required": [
        "uid"
      ]
    },
    "MenuItem": {
      "title": "MenuItem",
      "type": "object",
      "description": "Represents an item on the restaurant's menu.",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "isAvailable": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "price",
        "category",
        "isAvailable"
      ]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a customer's order.",
      "properties": {
        "status": {
          "type": "string"
        },
        "total": {
          "type": "number"
        },
        "createdAt": {
          "type": "number"
        }
      },
      "required": [
        "status",
        "total",
        "createdAt"
      ]
    },
    "Table": {
      "title": "Table",
      "type": "object",
      "description": "Represents a table in the restaurant.",
      "properties": {
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "status"
      ]
    },
    "StockItem": {
      "title": "StockItem",
      "type": "object",
      "description": "Represents an item in the restaurant's stock.",
      "properties": {
        "name": {
          "type": "string"
        },
        "currentStock": {
          "type": "number"
        },
        "totalStock": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "currentStock",
        "totalStock"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/menuItems/{menuItemId}",
        "definition": {
          "entityName": "MenuItem",
          "description": "Stores all menu items."
        }
      },
      {
        "path": "/orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "description": "Stores customer orders."
        }
      },
      {
        "path": "/tables/{tableId}",
        "definition": {
          "entityName": "Table",
          "description": "Stores restaurant table information."
        }
      },
      {
        "path": "/stockItems/{stockItemId}",
        "definition": {
          "entityName": "StockItem",
          "description": "Stores inventory and stock items."
        }
      },
      {
        "path": "/roles_staff/{uid}",
        "definition": {
          "description": "Contains UIDs of staff members for role-based access control."
        }
      }
    ]
  }
}