{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "role": { "type": "string", "enum": ["manager", "cashier", "waiter", "admin", "kitchen"] }
      },
      "required": ["uid", "email"]
    },
    "MenuItem": {
      "title": "Menu Item",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "isAvailable": { "type": "boolean" },
        "category": { "type": "string", "enum": ["Burgers", "Sides", "Wraps", "Pizzas", "Drinks", "Pasta"] }
      },
      "required": ["name", "price", "imageUrl", "isAvailable", "category"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "properties": {
        "orderNumber": { "type": "string" },
        "customerName": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["name", "quantity", "price"]
          }
        },
        "status": { "type": "string", "enum": ["Waiting", "Cooking", "Done"] },
        "total": { "type": "number" },
        "time": { "type": "string" },
        "createdAt": { "type": "number" },
        "paymentMethod": { "type": "string", "enum": ["Cash", "Card"] },
        "tableId": { "type": "string" }
      },
      "required": ["orderNumber", "customerName", "items", "status", "total", "time", "createdAt"]
    },
    "Table": {
      "title": "Table",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["Empty", "Seated", "Eating", "Needs Bill"] },
        "guests": { "type": "number" },
        "orderId": { "type": "string" },
        "shape": { "type": "string", "enum": ["square", "circle"] }
      },
      "required": ["name", "status", "guests", "shape"]
    },
    "StockItem": {
      "title": "Stock Item",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "stockLevel": { "type": "number" },
        "threshold": { "type": "number" }
      },
      "required": ["name", "stockLevel", "threshold"]
    },
    "InventoryLog": {
        "title": "Inventory Log",
        "description": "Tracks changes to inventory items.",
        "type": "object",
        "properties": {
            "itemId": { "type": "string", "description": "ID of the StockItem that was changed." },
            "itemName": { "type": "string", "description": "Name of the StockItem that was changed." },
            "userId": { "type": "string", "description": "ID of the user who made the change." },
            "userName": { "type": "string", "description": "Name of the user who made the change." },
            "oldStockLevel": { "type": "number", "description": "Stock level before the change." },
            "newStockLevel": { "type": "number", "description": "Stock level after the change." },
            "timestamp": { "type": "number", "description": "When the change occurred (Unix timestamp)." }
        },
        "required": ["itemId", "itemName", "userId", "userName", "oldStockLevel", "newStockLevel", "timestamp"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "User profiles."
    },
    "/menuItems/{menuItemId}": {
      "schema": { "$ref": "#/entities/MenuItem" },
      "description": "List of all menu items."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "All customer orders."
    },
    "/tables/{tableId}": {
      "schema": { "$ref": "#/entities/Table" },
      "description": "Restaurant tables."
    },
    "/stockItems/{stockItemId}": {
      "schema": { "$ref": "#/entities/StockItem" },
      "description": "Inventory stock levels."
    },
    "/inventoryLogs/{inventoryLogId}": {
      "schema": { "$ref": "#/entities/InventoryLog" },
      "description": "Logs of all changes to inventory stock."
    }
  }
}
