
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The unique identifier for the user, matching the Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role in the system.",
          "enum": ["admin", "manager", "cashier", "waiter", "kitchen"]
        }
      },
      "required": ["uid"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "orderNumber": { "type": "string" },
        "customerName": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" },
              "size": { "type": "string" }
            },
            "required": ["name", "quantity", "price"]
          }
        },
        "status": { "type": "string", "enum": ["Waiting", "Cooking", "Done"] },
        "total": { "type": "number" },
        "time": { "type": "string" },
        "createdAt": { "type": "number" },
        "cookingStartedAt": { "type": "number" },
        "tableId": { "type": "string" },
        "paymentMethod": { "type": "string", "enum": ["Cash", "Card"] },
        "orderType": { "type": "string", "enum": ["Pickup", "Delivery", "Dine-in"] },
        "address": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "stockDeducted": { "type": "boolean" }
      },
      "required": ["orderNumber", "customerName", "items", "status", "total", "time", "createdAt", "orderType"]
    },
    "MenuItem": {
      "title": "MenuItem",
      "type": "object",
      "description": "Represents an item on the restaurant's menu.",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "isAvailable": { "type": "boolean" },
        "category": { "type": "string", "enum": ["Burgers", "Sides", "Wraps", "Pizzas", "Drinks", "Pasta"] },
        "size": {
            "type": "string",
            "description": "The size of the menu item, if applicable (e.g., for pizzas).",
            "enum": ["Regular", "Small", "Large", "Party"]
        }
      },
      "required": ["name", "price", "imageUrl", "isAvailable", "category"]
    },
    "StockItem": {
      "title": "StockItem",
      "type": "object",
      "description": "Represents an item in the restaurant's stock.",
      "properties": {
        "name": { "type": "string" },
        "currentStock": { "type": "number" },
        "totalStock": { "type": "number" },
        "unit": { "type": "string", "enum": ["g", "ml", "pcs", "kg"] },
        "threshold": { "type": "number" }
      },
      "required": ["name", "currentStock", "totalStock", "unit", "threshold"]
    },
    "Table": {
      "title": "Table",
      "type": "object",
      "description": "Represents a table in the restaurant.",
      "properties": {
        "name": { "type": "string" },
        "status": { "type": "string", "enum": ["Empty", "Seated", "Eating", "Needs Bill"] },
        "guests": { "type": "number" },
        "orderId": { "type": "string" },
        "shape": { "type": "string", "enum": ["square", "circle"] }
      },
      "required": ["name", "status", "guests", "shape"]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores customer orders."
    },
    "/menuItems/{menuItemId}": {
      "schema": { "$ref": "#/entities/MenuItem" },
      "description": "Stores the public menu items available in the restaurant."
    },
    "/menuItemRecipes/{menuItemId}": {
      "schema": {
        "type": "object",
        "properties": {
          "recipe": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "stockItemId": { "type": "string" },
                "quantity": { "type": "number" }
              },
              "required": ["stockItemId", "quantity"]
            }
          }
        },
        "required": ["recipe"]
      },
      "description": "Stores the recipe for a corresponding menu item. Private to staff."
    },
    "/stockItems/{stockItemId}": {
      "schema": { "$ref": "#/entities/StockItem" },
      "description": "Stores stock levels for ingredients."
    },
    "/tables/{tableId}": {
      "schema": { "$ref": "#/entities/Table" },
      "description": "Stores information about restaurant tables."
    },
    "/inventoryLogs/{logId}": {
        "schema": {
            "type": "object",
            "properties": {
                "itemId": {"type": "string"},
                "itemName": {"type": "string"},
                "userId": {"type": "string"},
                "userName": {"type": "string"},
                "change": {"type": "number"},
                "oldStockLevel": {"type": "number"},
                "newStockLevel": {"type": "number"},
                "reason": {"type": "string"},
                "timestamp": {"type": "number"}
            },
            "required": ["itemId", "itemName", "userId", "change", "newStockLevel", "reason", "timestamp"]
        },
        "description": "Logs changes to inventory stock."
    }
  }
}
