rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function getRequestingUserData() {
      // Use exists() to avoid errors on non-existent user docs, like during signup/seeding
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data : null;
    }

    function isAdmin() {
      let userData = getRequestingUserData();
      return isAuthenticated() && userData != null && userData.role == 'admin';
    }

    function isManagerOrAdmin() {
      let userData = getRequestingUserData();
      return isAuthenticated() && userData != null && (userData.role == 'manager' || userData.role == 'admin');
    }

    // Users must be publicly readable for the login page to work
    match /users/{userId} {
      allow read: if true;
      // Allow user creation ONLY for the seeder script to work.
      // In a real app, this should be more secure (e.g., only by admins).
      allow create: if true;
      // Allow users to update their own profile (but not their role), and admins to update any profile.
      allow update: if (isAuthenticated() && request.auth.uid == userId && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isAdmin();
    }

    // Menu should be publicly readable
    match /menuItems/{menuItemId} {
      allow read: if true;
      allow write: if isManagerOrAdmin();
    }
    
    // Customers need to be able to create orders. Staff need to read/update them.
    match /orders/{orderId} {
      allow create: if true; // Anyone can create an order
      allow read, update: if isAuthenticated(); // Any logged-in staff can view and update orders. UI handles specifics.
      allow delete: if isManagerOrAdmin();
    }
    
    // Table info needs to be readable by customers to place orders.
    // Status updates are handled by staff.
    match /tables/{tableId} {
        allow read: if true;
        // Only waiters, managers, or admins can update table status
        allow write: if isAuthenticated() && getRequestingUserData().role in ['waiter', 'manager', 'admin'];
    }
    
    // Stock items are sensitive and should only be read or written by managers and admins.
    match /stockItems/{stockItemId} {
        allow read, write: if isManagerOrAdmin();
    }
    
    match /inventoryLogs/{inventoryLogId} {
        allow read: if isManagerOrAdmin();
        allow create: if isManagerOrAdmin();
        allow update, delete: if false; // Logs should be immutable
    }
  }
}
