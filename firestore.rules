
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isStaff() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['manager', 'admin'];
    }
    
    function isKitchenStaff() {
       return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['kitchen', 'manager', 'admin'];
    }

    function isCashier() {
        return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['cashier', 'manager', 'admin'];
    }
    
    function isWaiter() {
       return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['waiter', 'manager', 'admin'];
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    match /tables/{tableId} {
      allow read: if true;
      allow write: if isWaiter() || isStaff();
    }

    match /orders/{orderId} {
        allow create: if true;
        allow read: if true; // Public read for demo
        allow update: if isKitchenStaff() || isCashier() || isStaff();
    }

    match /stockItems/{stockItemId} {
        allow read: if true; // Public read for demo
        allow write: if isStaff();
    }
    
    match /inventoryLogs/{logId} {
        allow read: if true; // Public read for demo
        allow write: if isStaff();
    }

    match /users/{userId} {
      allow read: if true; 
      allow create: if request.auth.uid == userId;
      allow update: if isAdmin() || request.auth.uid == userId;
    }
  }
}
