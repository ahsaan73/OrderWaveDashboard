rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isStaff() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_staff/$(request.auth.uid));
    }

    // Rule for user profiles
    match /users/{userId} {
      // Any authenticated user can create their own profile document upon sign-in.
      allow create: if request.auth.uid == userId;
      // Users can read their own profile. Staff can read any profile.
      allow get: if request.auth.uid == userId || isStaff();
      // Only staff can list all users (e.g., for the admin page).
      allow list: if isStaff();
      // Users can update their own profile data. Staff (admins) can update any profile (e.g., to change a role).
      allow update: if request.auth.uid == userId || isStaff();
      // Deletes should be handled server-side or by an admin with specific privileges, so disable for now.
      allow delete: if false;
    }

    // Publicly readable menu for online ordering and POS.
    match /menuItems/{menuItemId} {
      allow get, list: if true;
      // Only staff can modify the menu.
      allow create, update, delete: if isStaff();
    }
    
    // Tables should be publicly readable for maps and QR code ordering.
    match /tables/{tableId} {
        allow get, list: if true;
        // Any signed-in user can update a table (e.g., placing an order, requesting a bill).
        // Staff can also update tables (e.g., seating guests).
        allow update: if isSignedIn();
    }

    // Orders can be created by any signed-in user (from QR codes or online).
    // Only staff can view and manage all orders.
    match /orders/{orderId} {
        allow create: if isSignedIn();
        allow get, list, update, delete: if isStaff();
    }

    // Stock and inventory logs are internal and can only be managed by staff.
    match /stockItems/{stockItemId} {
        allow get, list, create, update, delete: if isStaff();
    }
    
    match /inventoryLogs/{logId} {
        allow get, list, create, update, delete: if isStaff();
    }

    // The roles collection is a critical piece of security. It should only be
    // written to by a trusted backend process (e.g., an Admin SDK).
    // It is readable by staff to allow for certain UI checks if needed.
    match /roles_staff/{uid} {
      allow read: if isStaff();
      allow write: if false;
    }
  }
}
